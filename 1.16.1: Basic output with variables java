/* Start of my Code*/
import java.util.Scanner;   /*importing*/

public class OutputWithVars {
   public static void main(String[] args) {
      Scanner scnr = new Scanner(System.in);
      
/* Where the variable are being stored*/
      int userNum = 0;
      int userNum0 = 0;
      
/* Start of the program showing*/
      System.out.println("Enter integer: ");
      userNum = scnr.nextInt();
      
/*First section of the Assignment*/
      System.out.println("You entered: "+ userNum);
      System.out.println(userNum + " squared is " + userNum * userNum);
      System.out.println("And " + userNum + " cubed is " + userNum * userNum * userNum + "!!");
      
/*Second section of the Assignment*/
      System.out.println("Enter another integer: ");
      userNum0 = scnr.nextInt();
      /* UserNum and UserNum0 for addition and multipling */
      System.out.println(userNum + " + " + userNum0 + " is "+ (userNum + userNum0));
      System.out.println(userNum + " * " + userNum0 + " is "+ (userNum * userNum0));
      return;
   }
}
/* End of my code */
